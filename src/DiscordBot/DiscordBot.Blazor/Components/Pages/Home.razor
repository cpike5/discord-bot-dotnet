@layout MainLayout
@page "/"
@using DiscordBot.Blazor.Components.Layout

<PageTitle>Home</PageTitle>

<div class="home-container">
    <div class="hero-section">
        <h1 class="hero-title">Welcome</h1>
        <p class="hero-subtitle">Discord Bot Management Dashboard</p>
    </div>
</div>

<style>
    .home-container {
        display: flex;
        align-items: center;
